{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "turbo": "^2.1.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.12.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/config/eslint/index.mjs",
      "prettier --write --config packages/config/prettier/index.js"
    ],
    "*.{json,md}": [
      "prettier --write --config packages/config/prettier/index.js"
    ]
  }
}
