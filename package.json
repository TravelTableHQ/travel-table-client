{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^2.1.3",
    "@types/node": "^22.12.0",
    "typescript": "^5.7.2",
    "prettier": "^3.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "packageManager": "pnpm@10.12.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
